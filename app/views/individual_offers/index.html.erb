<p id="notice"><%= notice %></p>

<h1>Listing Individual Offers</h1>

<table>
  <thead>
    <tr>
      <th>Individual</th>
      <th>Charity offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @individual_offers.each do |individual_offer| %>
      <tr>
        <td><%= individual_offer.individual %></td>
        <td><%= individual_offer.charity_offer %></td>
        <td><%= link_to 'Show', individual_offer %></td>
        <td><%= link_to 'Edit', edit_individual_offer_path(individual_offer) %></td>
        <td><%= link_to 'Destroy', individual_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

