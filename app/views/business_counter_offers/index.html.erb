<p id="notice"><%= notice %></p>

<h1>Listing Business Counter Offers</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Charity offer</th>
      <th>Shortcode</th>
      <th>Shortdescription</th>
      <th>Longdescription</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_counter_offers.each do |business_counter_offer| %>
      <tr>
        <td><%= business_counter_offer.business %></td>
        <td><%= business_counter_offer.charity_offer %></td>
        <td><%= business_counter_offer.shortCode %></td>
        <td><%= business_counter_offer.shortDescription %></td>
        <td><%= business_counter_offer.longDescription %></td>
        <td><%= business_counter_offer.amount %></td>
        <td><%= link_to 'Show', business_counter_offer %></td>
        <td><%= link_to 'Edit', edit_business_counter_offer_path(business_counter_offer) %></td>
        <td><%= link_to 'Destroy', business_counter_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

