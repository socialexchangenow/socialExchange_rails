<p id="notice"><%= notice %></p>

<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Shortcode</th>
      <th>Shortdescription</th>
      <th>Longdescription</th>
      <th>Contactemail</th>
      <th>Contactphone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.shortCode %></td>
        <td><%= business.shortDescription %></td>
        <td><%= business.longDescription %></td>
        <td><%= business.contactEmail %></td>
        <td><%= business.contactPhone %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

